<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <ArchitectureSkipAnalyzers>true</ArchitectureSkipAnalyzers>
    <PackageId>GiantCroissant.FantaSim.Architecture.Router</PackageId>
    <Version>$(Version)</Version>
    <Authors>Lunar Horse</Authors>
    <Description>MSBuild router for FantaSim architecture governance</Description>
    <PackageTags>fantasim;architecture;msbuild;router</PackageTags>
    <DevelopmentDependency>true</DevelopmentDependency>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Utilities.Core" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Architecture.Policy\Architecture.Policy.csproj" />
  </ItemGroup>

</Project>
