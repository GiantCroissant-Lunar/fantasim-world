{
  "$schema": "https://raw.githubusercontent.com/code-yeongyu/oh-my-opencode/master/assets/oh-my-opencode.schema.json",
  "agents": {
    "sisyphus": {
      "model": "github-copilot/gpt-5.2",
      "variant": "high"
    },
    "oracle": {
      "model": "github-copilot/gpt-5.2",
      "variant": "high"
    },
    "librarian": {
      "model": "zai-coding-plan/glm-4.6v",
      "permission": {
        "edit": "deny",
        "bash": "deny",
        "webfetch": "allow"
      }
    },
    "explore": {
      "model": "zai-coding-plan/glm-4.6v",
      "permission": {
        "edit": "deny",
        "bash": "deny"
      }
    },
    "multimodal-looker": {
      "model": "google/gemini-3-flash-preview"
    },
    "prometheus": {
      "model": "anthropic/claude-opus-4-5",
      "variant": "max"
    },
    "metis": {
      "model": "openai/gpt-5.2",
      "variant": "high"
    },
    "momus": {
      "model": "openai/gpt-5.2",
      "variant": "medium"
    },
    "atlas": {
      "model": "zai-coding-plan/glm-4.7"
    }
  },
  "background_task": {
    "defaultConcurrency": 4
  },
  "categories": {
    "business-logic": {
      "prompt_append": "Follow the repository rules under .agent/rules/ (topology-first, spec-driven). Do not modify documentation unless explicitly asked."
    }
  }
}
