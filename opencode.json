{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": {
      "*": "ask"
    },
    "external_directory": {
      "*": "ask",
      "D:\\lunar-snake\\personal-work\\plate-projects\\fantasim-hub\\docs\\**": "allow",
      "D:/lunar-snake/personal-work/plate-projects/fantasim-hub/docs/**": "allow",
      "D:\\lunar-snake\\personal-work\\plate-projects\\modern-rocksdb\\**": "allow",
      "D:/lunar-snake/personal-work/plate-projects/modern-rocksdb/**": "allow"
    }
  },
  "agent": {
    "build": {
      "permission": {
        "bash": {
          "*": "ask",
          "ls*": "allow",
          "task sync-skills*": "allow",
          "task sync-commands*": "allow",
          "task spec:init*": "allow",
          "task spec:new*": "allow",
          "task spec:list*": "allow",
          "task spec:backfill*": "allow",
          "task spec:specify*": "allow",
          "task spec:plan*": "allow",
          "task spec:tasks*": "allow",
          "task spec:implement*": "allow",
          "task spec:done*": "allow",
          "pwsh*.specify/scripts/powershell/*.ps1*": "allow",
          "pwsh*\\.specify\\scripts\\powershell\\*.ps1*": "allow",
          ".specify/scripts/powershell/*.ps1*": "allow",
          ".specify\\scripts\\powershell\\*.ps1*": "allow",
          "dotnet --info*": "allow",
          "dotnet restore*": "allow",
          "dotnet build*": "allow",
          "dotnet test*": "allow",
          "git fetch*": "allow",
          "git ls-remote*": "allow",
          "git branch -a*": "allow",
          "git branch --all*": "allow",
          "git branch --list*": "allow",
          "git branch --show-current*": "allow",
          "git branch -r*": "allow",
          "git config --get*": "allow",
          "git rev-parse*": "allow",
          "git status*": "allow",
          "git worktree list*": "allow"
        },
        "edit": "ask"
      }
    },
    "deep-thinker": {
      "description": "High-effort reasoning subagent for complex audits (read-only)",
      "mode": "subagent",
      "model": "github-copilot/gpt-5.2",
      "reasoningEffort": "high",
      "textVerbosity": "low",
      "maxSteps": 80,
      "permission": {
        "bash": "deny",
        "edit": "deny"
      }
    },
    "plan-hi": {
      "description": "High-depth planning subagent (no bash, plan-file-only edits)",
      "mode": "subagent",
      "model": "github-copilot/gpt-5.2",
      "reasoningEffort": "high",
      "textVerbosity": "low",
      "maxSteps": 80,
      "permission": {
        "bash": "deny",
        "edit": {
          "*": "deny",
          "specs/*/plan.md": "allow",
          "*/specs/*/plan.md": "allow",
          "*\\specs\\*\\plan.md": "allow"
        }
      }
    },
    "plan": {
      "permission": {
        "bash": "deny",
        "edit": {
          "*": "deny",
          "specs/*/plan.md": "allow",
          "*/specs/*/plan.md": "allow",
          "*\\specs\\*\\plan.md": "allow"
        }
      }
    }
  }
}
